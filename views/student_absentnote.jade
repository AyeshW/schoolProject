        // //css files
    body
        h1 Absent Note
        .w3l-main
            .w3l-from
                form(action='/student_absentnote', method='post')
                    .w3l-user1
                        label.head
                            | Student's Full Name
                            span.w3l-star  *
                        input(type='text', id='name', name="Students's Full Name", placeholder='Kasun Prasad Perera', required='')

                    .w3l-number
                        label.head
                            | Index Number
                            span.w3l-star  *
                            input(type='number', id='Index', name="Index", placeholder='5 digit index number', required='')
                        p(id='pindex',name ='pindex', style='display:inline; color:red;') #{message1}
                     .clear
                    .w3l-mail
                        label.head
                            | Email
                            span.w3l-star  *
                        input(type='email', id='mail1' name='email', placeholder='kasun@ymail.com', required='')
                    .w3l-number
                        label.head
                            | Parent's Phone Number
                            span.w3l-star  *
                        input(type='number', id='mobile', name='phone_number', placeholder='07XXXXXXXX', required='')
                        p(id='mob',style='display:inline; color:red;') #{message2}
                    .clear
                    .w3l-date
                        label.head
                            | Absent Dates(From)
                            span.w3l-star  *

                        .styled-input
                            input#date1(type='date', name='From', placeholder='MM/DD/YYYY')


                    .w3l-dateRight
                        label.head
                            | Absent Dates(To)
                            span.w3l-star  *
                        //p (Enter the same date if you absent only one day)
                        .styled-input
                            input#date3(type='date', name='To', placeholder='MM/DD/YYYY')
                    p(style='font-size: 16px; color: white; font-weight: 1000; ') Enter the same date if you absent only one day
                    p(id='nodate', style='display:inline; color:red;') #{message4}
                    p(id='date', style='display:inline; color:red;') #{message3}
                     .clear

                    .w3l-rem
                        .w3l-right
                            label.head
                                | Reason for Absence
                                span.w3l-star  *
                            textarea(required='')
                    //.w3l-date
                        label.head
                            | Date
                            span.w3l-star  *

                        .styled-input
                            input#date2(type='date', name='today', placeholder='MM/DD/YYYY')
                    .w3l-sym
                        label.head
                            .btn1
                                input(type='submit', id='submit',name='submit', value='Send')
                    .clear



