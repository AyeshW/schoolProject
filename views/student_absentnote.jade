    body
        h1 Absent Note
        .w3l-main
            .w3l-from
                form(action='/', method='post')
                    .w3l-user1
                        label.head
                            | Student's Full Name
                            span.w3l-star  *
                        input(type='text', id='name', name="Students's Full Name", placeholder='Kasun Prasad Perera', required='')

                    .w3l-number
                        label.head
                            | Index Number
                            span.w3l-star  *
                            input(type='number', id='index', name="index", placeholder='5 digit index number', required='')
                     .clear
                    .w3l-mail
                        label.head
                            | Email
                            span.w3l-star  *
                        input(type='email', id='mail1' name='email', placeholder='kasun@ymail.com', required='')
                    .w3l-number
                        label.head
                            | Parent's Phone Number
                            span.w3l-star  *
                        input(type='number', id='mobile', name='phone number', placeholder='07XXXXXXXX', required='')
                        p(id='mob',style='display:none; color:red;') Invalid Phone Number. Enter 10 Digit Number
                    .clear
                    .w3l-date
                        label.head
                            | Absent Dates
                            button(onclick='addMore()') Add
                            button(onclick='Undo()') Undo
                            span.w3l-star  *

                        .styled-input
                            input#date1(type='date', name='from', placeholder='MM/DD/YYYY')

                            .w3l-sym1
                                    div
                                        ul#dates
                            script.
                               // var today = new Date();
                                function addMore() {
                                    var absent_date = document.getElementById("date1").value;

                                    //if(absent_date>today )
                                    var node = document.createElement("LI");
                                    var textnode = document.createTextNode(absent_date);
                                    node.appendChild(textnode);
                                    document.getElementById("dates").appendChild(node);
                                }
                               function Undo() {
                                   var child = document.getElementById("dates").lastChild;
                                   document.getElementById("dates").removeChild(child);
                               }

                            p(id='date', style='display:none; color:red;') Invalid Date
                     .clear
                    .w3l-rem
                        .w3l-right
                            label.head
                                | Reason for Absence
                                span.w3l-star  *
                            textarea
                    .w3l-date
                        label.head
                            | Date
                            span.w3l-star  *

                        .styled-input
                            input#date2(type='date', name='from', placeholder='MM/DD/YYYY')
                    .w3l-sym
                        label.head
                            .btn1
                                input(type='submit', id='submit',name='submit', value='Send')
                    .clear



