doctype html
html(lang='en')
    head
        style(type='text/css').
            @media  only screen and (min-device-width: 768px)
            {
                .form-container {
                    padding: 5%;
                    background: #ffffff;
                    border: 9px solid #f2f2f2;
                    max-width: 600px;
                    margin: auto;
                }
            }
            h1, p
            {
                text-align: center;
            }
            input, textarea , button
            {
                width: 100%;
            }
            textarea
            {
                height: 100px;
            }
            #today{
                width:150px;
                background:beige;
            }
            #TodayIsText{
                color:darkblue;
                font-size: large;
            }
            input[type="date"]::-webkit-calendar-picker-indicator {
                color: rgba(0, 0, 0, 0);
                opacity: 1;
                display: block;
                background: url(https://mywildalberta.ca/images/GFX-MWA-Parks-Reservations.png) no-repeat;
                width: 20px;
                height: 20px;
                border-width: thin;
            }
            table {
                font-family: arial, sans-serif;
                border-collapse: collapse;
                text-align: center;
                width: 100%;
            }
            td, th {
                border: 1px solid #dddddd;
                text-align: center;
                padding: 8px;
            }
            tr:nth-child(even) {
                background-color: #dddddd;
            }
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title Apply Leave Form
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
        script(src='AttendenceSheet.js')
    body
        .container
            .form-container
                h2(style='color:deepskyblue;text-align: center')
                    | Teacher's Attendence Sheet
                form#reused_form(method='post')
                    label#TodayIsText(for='today', style='float:left') Date :
                    // <input id="date" type="date" name="Date" placeholder='MM/DD/YYYY'  >
                    input#today(type='date', name='Date')
                    h3(style='align:center') Teacher Table
                    table
                        tr
                            th Id No
                            th Teacher
                            th Presence

                         tbody
                             -each item in jsonArray
                                tr
                                  td=item.id
                                  td=item.name
                                  td
                                     input(type='checkbox' name='d')





                    button#submitbtn.button-primary(type='submit', onclick='renderNames()') Confirm
                #success_message(style='display:none')
                    h3 Submitted the form successfully!
                    p  We will get back to you soon.
                #error_message(style='width:100%; height:100%; display:none; ')
                    h3 Error
                    |  Sorry there was an error sending your form.
