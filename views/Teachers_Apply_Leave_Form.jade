doctype html

html(lang='en')
    head
        style(type='text/css').
            @media  only screen and (min-device-width: 768px)
            {
                .form-container {
                    padding: 5%;
                    background: #ffffff;
                    border: 9px solid #f2f2f2;
                    max-width: 520px;
                    margin: auto;
                }
            }
            h1, p
            {
                text-align: center;
            }
            input, textarea , button
            {
                width: 100%;
            }
            textarea
            {
                height: 100px;
            }
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title Apply Leave Form
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
        script(src="/routes/Teachers_Apply_Leave_Form.js")
    body
        .container
            .form-container
                h1
                    | Apply Leave Form
                form#reused_form(method='post')
                    label(for='name') Your Name:
                    input#name(type='text', name='Name', required='', maxlength='50')
                    label(for='Id') Teacher's ID:
                    input#Id(type='number', name='ID', required='', maxlength='10')
                    label(for='designation') Designation:
                    input#designation(type='text', name='Designation', required='', maxlength='20')
                    label(for='reason') Reason:
                    textarea#reason(name='Reason', rows='5', maxlength='3000', required='')
                    label(for='sdate') From:
                    input#sdate(type='date', name='Sdate')
                    label(for='edate') To:
                    input#edate(type='date', name='Edate')
                    label(for='yes_no') Any classes on above Period?
                    select#yes_no(name='Ifclasses')
                        option(value='Yes') Yes
                        option(value='No') No
                    label(for='classes') Briefly indicate the dates and times of classes
                    input#classes(type='text', name='Classes')
                    label(for='email') Email Address:
                    input#email(type='email', name='Email', required='', maxlength='50')
                    button#submitbtn.button-primary(type='submit', onclick='clic(this)') Send Request
                #success_message(style='display:none')
                    h3 Submitted the form successfully!
                    p  We will get back to you soon.
                #error_message(style='width:100%; height:100%; display:none; ')
                    h3 Error
                    |  Sorry there was an error sending your form.
