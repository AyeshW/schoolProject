                                        }
                                        break;
                                    case "7":
                                        if (age > 12 || age < 11) {
                                            document.getElementById("pdate").style.display = "inline";
                                        }
                                        break;
                                    case "8":
                                        if (age > 13 || age < 12) {
                                            document.getElementById("pdate").style.display = "inline";
                                        }
                                        break;
                                    case "9":
